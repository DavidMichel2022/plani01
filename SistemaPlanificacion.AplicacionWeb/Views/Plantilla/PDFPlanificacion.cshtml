@model SistemaPlanificacion.AplicacionWeb.Models.ViewModels.VMPDFPlanificacion;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Imprimir Planificacion</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            color: #03A99F;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #858585;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbPartidas {
            border-collapse: separate;
            border-spacing: 4px;
        }

            table.tbPartidas thead tr th {
                background-color: #03A99F;
                padding: 10px;
                font-size: 15px;
                color: white;
            }

            table.tbPartidas tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #03A99F;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }
    </style>
</head>
<body>

    <div class="contenedor">

        <table style="width:100%">
            <tr>
                <td>
                    <img src="@Model.Negocio.UrlLogo" style="width: 120px;height:120px" />
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">NÚMERO PLANIFICACION</p></td></tr>
                        <tr><td>@Model.Planificacion.NumeroPlanificacion</td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <table style="width:100%">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td>
                                <p class="title">@Model.Negocio.Nombre.ToUpper()</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text">Direccion: @Model.Negocio.Direccion</p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">Correo: @Model.Negocio.Correo</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td><p class="title">CARPETA</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">@Model.Planificacion.CitePlanificacion</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">@Model.Planificacion.NombreRegional</p></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">Descripcion</th>
                    <th class="tbth">Medida</th>
                    <th class="tbth" style="width:130px">Cantidad</th>
                    <th class="tbth" style="width:130px">Precio</th>
                    <th class="tbth" style="width:130px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Planificacion.DetallePlanificacion)
                    {
                        <tr>
                            <td class="td-item"><p class="item">@item.NombreItem</p></td>
                            <td class="td-item"><p class="item">@item.Medida</p></td>
                            <td class="td-item"><p class="item">@item.Cantidad</p></td>
                            <td class="td-item"><p class="item">@Model.Negocio.SimboloMoneda @item.Precio</p></td>
                            <td style="background-color:#EDF6F9"><p class="item">@Model.Negocio.SimboloMoneda @item.Total</p></td>
                        </tr>

                    }
                }
                <tr>
                    <td colspan="3" rowspan="3">
                    </td>
                    <td class="td-item">
                        <p class="tbth">         Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.Negocio.SimboloMoneda @Model.Planificacion.MontoPlanificacion</p>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

</body>
</html>




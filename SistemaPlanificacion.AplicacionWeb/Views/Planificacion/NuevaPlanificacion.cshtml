@{
    ViewData["Title"] = "Nuevo Documento Planificacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <style>
        .select2 {
            width: 100% !important;
        }
    </style>
}

<div class="text-center">
    <h2>SOLICITUD DE CERTIFICACION POA  -  (Formulario Certificacion N˚12)</h2>
</div>

<div class="row">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-12">

                <div class="card-historial-dml shadow mb-4" style="top:140px; width:60%; height:19%;">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white">II. ARTICULACION POA Y PEI</h6>
                    </div>
                    <div class="card-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-text">N° CITE:</div>
                            <input type="text" class="form-control mb-auto" style="left:10px;" id="txtCiteCarpeta" placeholder="Cite de la Carpeta">
                        </div>

                        <div class="input-group">
                            <label class="input-group-text input-group-sm mb-4" style="margin-top:1px" for="cboLugar">Lugar y Fecha:</label>
                            <select class="form-control mb-6" style="margin-left:10px" id="cboLugar">
                                <option value="Santa Cruz">Santa Cruz</option>
                            </select>
                            <span class="input-group-addon"> - </span>
                            <input type="date" class="form-control-fecha mb-8" id="txtFechaRegistro" placeholder="Fecha Registro)">
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">

                <div class="card-historial-dml shadow mb-4" style="top:320px; width:60%; height:60%;">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white">II. DETALLE DE ITEM PARA CERTIFICACION POA DEL FORMULARIO POA Nª5</h6>
                    </div>

                    <div class="card-body" style="width:100%; height:87%; overflow-y:scroll">
                        <div class="form-row">
                            <div class="form-group col-sm-12">
                                Buscar Partida Presupuestaria:
                                <select class="form-control form-control-sm" id="cboBuscarPartida">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-sm" id="tbPartida">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th class='text-center'>Actividad</th>
                                            <th>Partida</th>
                                            <th>Detalle Requerimiento</th>
                                            <th>Unidad Medida</th>
                                            <th class='text-right'>Cantidad</th>
                                            <th class='text-right'>Precio</th>
                                            <th class='text-right'>Total</th>
                                            <th>Temporalidad</th>
                                            <th>Observacion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-4">

        <div class="row">
            <div class="col-sm-12">
                <div class="card-historial-dml shadow mb-4" style="top:140px; margin-left: 115px;  width:20%; height:50%;">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white"> I. UNIDAD ORGANIZACIONAL SOLICITANTE                                  </h6>
                    </div>
                    <div class="card-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group">
                                <label class="input-group-text" for="cboUnidadRegional">Regional/Departamento</label>
                            </div>
                            <select class="form-control form-control-sm" id="cboUnidadRegional">
                                <option value="Santa Cruz">Santa Cruz</option>
                            </select>

                            <div class="input-group">
                                <label class="input-group-text" for="cboUnidadEjecutora">Unidad Ejecutora</label>
                            </div>
                            <select class="form-control form-control-sm" id="cboUnidadEjecutora">
                                <option value="Regional Santa Cruz">Regional Santa Cruz</option>
                            </select>

                            <div class="input-group">
                                <label class="input-group-text" for="cboCentro">Centro Medico (Programa)</label>
                            </div>
                            <select class="custom-select" id="cboCentro">
                            </select>

                            <div class="input-group">
                                <label class="input-group-text" for="cboUnidadResponsable">Unidad Responsable</label>
                            </div>
                            <select class="custom-select" id="cboUnidadResponsable">
                            </select>

                            <div class="input-group">
                                <label class="input-group-text" for="cboDocumento">Tipo Documento</label>
                            </div>
                            <select class="custom-select" id="cboDocumento">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card-historial-dml shadow" style="top:640px; margin-left: 115px; width:20%; height:15%;">
                    <div class="card-body">

                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupTotal">Total</span>
                            </div>
                            <input type="text" class="form-control text-left" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                        </div>

                        <div class="form-group mb-0">
                            <button class="btn btn-success btn-sm btn-block" id="btnTerminarSolicitud">Terminar Solicitud Certificacion</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!---  Modal Para Registrar Partidas Presupuestarias en la Carpeta De Planificacion --->
<div class="modal-dml fade-dml" id="modalData" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dml-dialog modal-dml-lg" role="document">
        <div class="modal-dml-content">
            <div class="modal-dml-header">
                <h6>EDICION CARPETA DE PLANIFICACION</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-dml-body">
                <form>
                    <div class="card-body">

                        <div class="form-row-dml">
                             Cite Carpeta
                            <div class="form-group col-sm-2">
                                <input type="text" class="form-control form-control-sm" id="txtCitePlanificacionE" disabled>
                            </div>
                            Fecha Registro
                            <div class="form-group col-sm-4">
                                <input type="text" class="form-control form-control-sm" id="txtFechaRegistroE" disabled>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-12">
                                Buscar Partida Presupuestaria:
                                <select class="form-control form-control-sm" id="cboBuscarPartida">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-sm" id="tbPartidaEdicion">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Partida</th>
                                            <th class='text-center'>Actividad</th>  
                                            <th>Descripcion</th>
                                            <th>Medida</th>
                                            <th class='text-right'>Cantidad</th>
                                            <th class='text-right'>Precio Unitario</th>
                                            <th class='text-right'>Total</th>
                                            <th class='text-right'>Total</th>
                                            <th class='text-right'>Campo01</th>
                                            <th class='text-right'>Campo02</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-dml-footer">
                Total Carpeta Planificacion
                <div class="form-group col-sm-2">
                        <input type="text" class="form-control form-control-sm" id="txtTotalPlanificacionE" disabled>
                </div>
                <div>
                    <div>    </div>
                    <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Nueva_Planificacion.js"></script>

    <script src="/vendor/jquery-ui/jquery-ui.js"></script>
    <script src="/vendor/jquery-ui/idioma/datepicker-es.js"></script>
}



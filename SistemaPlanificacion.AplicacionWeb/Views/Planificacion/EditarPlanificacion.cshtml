@{
    ViewData["Title"] = "Nuevo Documento Planificacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <style>
        .select2 {
            width: 100% !important;
        }
    </style>
}

    <div class="text-center">
        <h2>EDITAR SOLICITUD DE CERTIFICACION POA </h2>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">II. ARTICULACION POA Y PEI</h6>
                        </div>
                        <div class="card-body">
                            <div class="input-group input-group-sm mb-3">

                                <div class="posicion-01">N° CITE:</div>
                                <input type="text" class="form-control-cite form-control-sm" id="txtCiteCarpeta" placeholder="Cite de la Carpeta" value="@Model.planificacion.CitePlanificacion">

                                <div class="input-group">
                                    <label class="input-group-text" for="cboLugar">Lugar y Fecha:</label>
                                </div>
                                <select class="form-control form-control-sm" id="cboLugar">
                                    <option value="Santa Cruz">Santa Cruz</option>
                                </select>
                                <span class="input-group-addon"> - </span>
                                <input type="date" class="form-control-fecha form-control-sm" id="txtFechaRegistro" placeholder="Fecha Registro)" value="@Model.planificacion.FechaPlanificacion">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">II. DETALLE DE ITEM PARA CERTIFICACION POA DEL FORMULARIO POA Nª5</h6>
                        </div>

                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    Buscar Partida Presupuestaria:
                                    <select class="form-control form-control-sm" id="cboBuscarPartida">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-sm" id="tbPartida">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Partida</th>
                                                <th>Detalle Requerimiento</th>
                                                <th>Unidad Medida</th>
                                                <th>Cantidad</th>
                                                <th>Precio</th>
                                                <th>Total</th>
                                                <th>Actividad</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-4">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white"> I. UNIDAD ORGANIZACIONAL SOLICITANTE                                  </h6>
                        </div>
                        <div class="card-body">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group">
                                    <label class="input-group-text" for="cboUnidadRegional">Regional/Departamento</label>
                                </div>
                                <select class="form-control form-control-sm" id="cboUnidadRegional">
                                    <option value="Santa Cruz">Santa Cruz</option>
                                </select>

                                <div class="input-group">
                                    <label class="input-group-text" for="cboUnidadEjecutora">Unidad Ejecutora</label>
                                </div>
                                <select class="form-control form-control-sm" id="cboUnidadEjecutora">
                                    <option value="Regional Santa Cruz">Regional Santa Cruz</option>
                                </select>

                                <div class="input-group">
                                    <label class="input-group-text" for="cboCentro">Centro Medico (Programa)</label>
                                </div>
                                <select class="custom-select" id="cboCentro">
                                </select>

                                <div class="input-group">
                                    <label class="input-group-text" for="cboUnidadResponsable">Unidad Responsable</label>
                                </div>
                                <select class="custom-select" id="cboUnidadResponsable">
                                </select>

                                <div class="input-group">
                                    <label class="input-group-text" for="cboDocumento">Tipo Documento</label>
                                </div>
                                <select class="custom-select" id="cboDocumento">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">

                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupTotal">Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                            </div>

                            <div class="form-group mb-0">
                                <button class="btn btn-success btn-sm btn-block" id="btnTerminarSolicitud">Guardar Solicitud Modificado Certificacion</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Editar_Planificacion.js"></script>

    <script src="/vendor/jquery-ui/jquery-ui.js"></script>
    <script src="/vendor/jquery-ui/idioma/datepicker-es.js"></script>
}


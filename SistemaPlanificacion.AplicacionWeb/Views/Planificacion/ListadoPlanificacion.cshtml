@{
    ViewData["Title"] = "Listado Solicitudes Certificación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">
}
    <!-- DataTales Example -->
<div class="card-historial-dml shadow mb-4" style="width:83%; height:86%;">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Listado Solicitudes para Certificación al POA</h6>
    </div>
    <div class="card-body">

        <div class="row" style="width:100%; height:102%; overflow-y:scroll">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>IdCarpeta</th>
                            <th>NroCarpeta</th>
                            <th>Cite Unidad</th>
                            <th>U.Solicitante</th>
                            <th>U.Responsable</th>
                            <th>Cant. Items</th>
                            <th>Monto Total</th>
                            <th>Estado Carpeta</th>
                            <th>Fecha Registro</th>
                            <th style="min-width:230px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!---  Modal--->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>DETALLE CARPETA DE REQUERIMIENTO</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body ">                    

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row">
                                <form class="form-inline">
                                    <input type="hidden" id="txtId" />
                                    <label class="sr-only" for="inlineFormInputGroupUsername2">Username</label>
                                    <div class="input-group mb-2 mr-sm-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">Estado de la Carpeta</div>
                                        </div>
                                        <input type="text" class="form-control form-control-lg-observacion" id="txtObservacion" placeholder="Username">
                                    </div>

                                </form>
                            </div>                           
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label for="txtFechaRegistro">Fecha Registro</label>
                                    <input type="text" class="form-control form-control-sm" id="txtFechaRegistro" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtNumeroPlanificacion">Nro. Carpeta</label>
                                    <input type="text" class="form-control form-control-sm" id="txtNumeroPlanificacion" disabled>
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for="txtCitePlanificacion">Cite Carpeta</label>
                                    <input type="text" class="form-control form-control-sm" id="txtCitePlanificacion" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                            <div class="form-group col-sm-4">
                                <label for="txtUnidadSolicitante">Unidad Solicitante</label>
                                <input type="text" class="form-control form-control-sm" id="txtUnidadSolicitante" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="txtUnidadResponsable">Unidad Responsable</label>
                                <input type="text" class="form-control form-control-sm" id="txtUnidadResponsable" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                    <label for="txtTotal">Monto Total</label>
                                    <input type="text" class="form-control" id="txtTotal" disabled>
                            </div>
                            <div class="col-sm-12">
                                <table id="tbPartida" class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>N°</th>
                                            <th>Descripcion</th>
                                            <th>Medida</th>
                                            <th>Cantidad</th>
                                            <th>Precio Unitario</th>
                                            <th>Total</th>
                                            <th>Actividad</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            
                        
                    </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script src="~/vendor/datatables/extensiones/js/dataTables.responsive.min.js"></script>

    <script src="~/vendor/datatables/extensiones/js/dataTables.buttons.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/jszip.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/buttons.html5.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/buttons.print.min.js"></script>

    <script src="~/js/vistas/ListadoPlanificacion.js"></script>
}



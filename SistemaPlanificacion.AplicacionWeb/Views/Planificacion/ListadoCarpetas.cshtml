@{
    ViewData["Title"] = "Listado Carpetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">

    <link rel="stylesheet" href="~/vendor/sweetalert/sweetalert.css">

    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <style>
        .select2 {
            width: 100% !important;
        }
    </style>
}
<!-- DataTales Example -->
<div class="card-historial-dml shadow mb-4" style="width:82%; height:86%;">

    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Mis Carpetas Requerimientos Registrados</h6>
    </div>
    <div class="card-body">

        <div class="row" style="width:100%; height:102%; overflow-y:scroll">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha Registro</th>
                            <th>Nro. Carpeta</th>
                            <th>Cite Carpeta</th>
                            <th>Unidad Solicitante</th> 
                            <th>Unidad Responsable</th>
                            <th class='text-right'>Monto Total</th>
                            <th>Estado</th>
                            <th style="min-width:100px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!---  Modal Para Visualizar Planificacion y Detalle --->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">

    <div class="modal-dialog modal-lg" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h6>DETALLE CARPETA DE PLANIFICACION</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">

                <form>
                    <input type="hidden" value="0" id="txtId">
                    <input type="hidden" class="form-control form-control-sm" id="txtIdDocumento" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtIdUnidadResponsable" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtIdCentro" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtIdUsuario" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtLugar" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtCertificadoPoa" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtReferenciaPlanificacion" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtNombreRegional" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtNombreEjecutora" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtMontoPoa" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtMontoPresupuesto" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtMontoCompra" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtUnidadProceso" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtEstadoCarpeta" disabled>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group col-sm-4">
                                <label for="txtObservacion">Estado De La Carpeta</label>
                                <input class="form-control form-control-lg-observacion" id="txtObservacion" disabled>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-sm-4">
                                <label for="txtFechaRegistro">Fecha Registro</label>
                                <input type="text" class="form-control form-control-sm" id="txtFechaRegistro" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="txtNumeroPlanificacion">Nro. Carpeta</label>
                                <input type="text" class="form-control form-control-sm" id="txtNumeroPlanificacion" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="txtCitePlanificacion">Cite Carpeta</label>
                                <input type="text" class="form-control form-control-sm" id="txtCitePlanificacion" disabled>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-sm-4">
                                <label for="txtUnidadSolicitante">Unidad Solicitante</label>
                                <input type="text" class="form-control form-control-sm" id="txtUnidadSolicitante" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="txtUnidadResponsable">Unidad Responsable</label>
                                <input type="text" class="form-control form-control-sm" id="txtUnidadResponsable" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="txtNombreDocumento">Tipo Documento</label>
                                <input type="text" class="form-control form-control-sm" id="txtNombreDocumento" disabled>
                            </div>

                            <div class="form-group col-sm-4">
                                Total:
                                <input type="text" class="form-control form-control-sm text-right" id="txtTotal" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <table id="tbPartidas" class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>N°</th>
                                    <th>Partida</th>
                                    <th>Descripcion</th>
                                    <th>Medida</th>
                                    <th class='text-right'>Cantidad</th>
                                    <th class='text-right'>Precio Unitario</th>
                                    <th class='text-right'>Total</th>
                                    <th class='text-center'>Actividad</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary btn-sm" target="_blank" id="linkImprimir">Imprimir</a>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!---  Modal Para Modificar Planificacion y Detalle --->

<div class="modal fade" id="modalDataEdicion" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">

    <div class="modal-dialog modal-lg" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h6>EDICION CARPETA DE PLANIFICACION</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">

                <form>
                    <input type="hidden" value="0" id="txtIdE">
                    <input type="hidden" class="form-control form-control-sm" id="txtIdDocumentoE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtIdUnidadResponsableE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtIdCentroE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtIdUsuarioE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtLugarE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtCertificadoPoaE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtReferenciaPlanificacionE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtNombreRegionalE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtNombreEjecutoraE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtMontoPoaE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtMontoPresupuestoE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtMontoCompraE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtUnidadProcesoE" disabled>
                    <input type="hidden" class="form-control form-control-sm" id="txtEstadoCarpetaE" disabled>
                    <input class="form-control form-control-lg-observacion" id="txtObservacionE" disabled>

                    <div class="card-body">

                        <div class="form-row">
                            <div class="form-group col-sm-4">
                                <label class="input-group-text-edicion" for="txtNumeroPlanificacionE">N° Carpeta</label>
                                <input type="text" class="form-control form-control-sm" id="txtNumeroPlanificacionE" disabled>
                            </div>
                            <div class="form-group col-sm-4">
                                <label class="input-group-text-edicion" for="txtCitePlanificacionE">Cite Carpeta</label>
                                <input type="text" class="form-control form-control-sm" id="txtCitePlanificacionE">
                            </div>
                            <div class="form-group col-sm-4">
                                <label class="input-group-text-edicion" for="txtFechaRegistroE">Fecha Registro</label>
                                <input type="text" class="form-control form-control-sm" id="txtFechaRegistroE" disabled>
                            </div>
                            <div class="form-group col-sm-6">
                                    <label class="input-group-text-edicion" for="cboCentro">Centro Medico (Programa)</label>
                            </div>
                            <select class="custom-select-edicion" id="cboCentro"></select>

                            <div class="form-group col-sm-6">
                                    <label class="input-group-text-edicion" for="cboUnidadResponsable">Unidad Responsable</label>
                            </div>
                            <select class="custom-select-edicion" id="cboUnidadResponsable"></select>

                            <div class="form-group col-sm-6">
                                <label class="input-group-text-edicion" for="cboDocumento">Tipo Documento</label>
                            </div>
                            <select class="custom-select-edicion" id="cboDocumento"></select>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-12">
                                Buscar Partida Presupuestaria:
                                <select class="form-control form-control-sm" id="cboBuscarPartida">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-sm" id="tbPartidaEdicion">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Partida</th>
                                            <th>Descripcion</th>
                                            <th>Medida</th>
                                            <th class='text-right'>Cantidad</th>
                                            <th class='text-right'>Precio Unitario</th>
                                            <th class='text-right'>Total</th>
                                            <th class='text-center'>Actividad</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="form-group col-sm-4">
                    <label class="input-group-text-edicion text-right" for="txtTotalPlanificacionE">Total Carpeta Planificacion</label>
                    <input type="text" class="form-control form-control-sm" id="txtTotalPlanificacionE" disabled>
                    <div>    </div>
                    <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>



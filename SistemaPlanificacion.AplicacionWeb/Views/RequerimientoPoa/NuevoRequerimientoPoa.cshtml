@{
    ViewData["Title"] = "Nuevo Documento Requerimiento Poa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <link href="~/css/EstiloValidarCampo.css" rel="stylesheet">

    <style>
        .select2 {
            width: 100% !important;
        }
    </style>
}

<div class="text-center">
    <h2>REGISTRO DEL REQUERIMIENTO POA - POR SERVICIO ESPECIFICO</h2>
</div>

<div class="row">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-nueva-planificacion-titulo2 shadow mb-4">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white">II. ARTICULACION POA Y PEI</h6>
                    </div>
                    <form action="" class="formulario" id="formulario">
                        <!-- Grupo: CiteCarpeta -->
                        <label for="txtCiteCarpeta" style="margin-left:320px;" class="formulario__label">N° Cite Carpeta :</label>
                        <div class="formulario__grupo" id="grupo__txtCiteCarpeta">
                            <div class="formulario__grupo-input" style="width:350px; margin-left:-100px;">
                                <input type="text" class="formulario__input" name="txtCiteCarpeta" id="txtCiteCarpeta" placeholder="Cite Del Requerimiento">
                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                            </div>
                            <p style="margin-left:-100px;" class="formulario__input-error">Cite Requerimiento debe tener de 4 a 30 dígitos (Numeros, Letras y Guion) Ej. CT-001-2023.</p>
                        </div>
                        <!-- Grupo: Lugar -->
                        <table>
                            <thead>
                                <tr>
                                    <th>
                                        <label for="cbolugar">  Lugar y Fecha :</label>
                                    <th>
                                        <select style="width:250px; margin-top:-10px;" class="form-control col-sm-24 mb-6" id="cboLugar">
                                            <option value="Santa Cruz">Santa Cruz</option>
                                        </select>
                                    </th>
                                    <th>
                                        <input type="date" class="form-control-fecha mb" id="txtFechaRegistro" placeholder="Fecha Registro)">
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-nueva-planificacion-titulo3 shadow mb-4">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white">III. DETALLE DE ITEM PARA CERTIFICACION POA DEL FORMULARIO POA Nª5</h6>
                    </div>
                    <div class="card-body" style="overflow-y:scroll">
                        <div class="form-row">
                            <div class="form-group col-sm-12">
                                Buscar Partida Presupuestaria:
                                <select class="form-control form-control-sm" id="cboBuscarPartida">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12" style="overflow-y:scroll; overflow-x:scroll">
                                <table class="table table-striped table-sm" id="tbPartida">
                                    <thead>
                                        <tr>
                                            <th class='text-center'>N°</th>
                                            <th class='text-center'>Actividad</th>
                                            <th class='text-center'>Partida</th>
                                            <th style="min-width:600px !important;" class='text-center'>Descripcion</th>
                                            <th class='text-center'>Medida</th>
                                            <th class='text-center'>Cantidad</th>
                                            <th class='text-center'>Precio Unitario</th>
                                            <th class='text-center'>Total</th>
                                            <th style="min-width:200px !important; text-align:center !important;" class='text-center'>Temporalidad</th>
                                            <th style="min-width:200px !important; text-align:center !important;" class='text-center'>Observacion</th>
                                            <th class='text-center'>Enero</th>
                                            <th class='text-center'>Febrero</th>
                                            <th class='text-center'>Marzo</th>
                                            <th class='text-center'>Abril</th>
                                            <th class='text-center'>Mayo</th>
                                            <th class='text-center'>Junio</th>
                                            <th class='text-center'>Julio</th>
                                            <th class='text-center'>Agosto</th>
                                            <th class='text-center'>Septiembre</th>
                                            <th class='text-center'>Octubre</th>
                                            <th class='text-center'>Noviembre</th>
                                            <th class='text-center'>Diciembre</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-nueva-planificacion-titulo1 shadow mb-4">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white"> I. UNIDAD ORGANIZACIONAL SOLICITANTE                                  </h6>
                    </div>
                    <div class="card-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group">
                                <label class="input-group-text" for="cboUnidadRegional">Regional/Departamento</label>
                            </div>
                            <select class="form-control form-control-sm" id="cboUnidadRegional">
                                <option value="Santa Cruz">Santa Cruz</option>
                            </select>
                            <div class="input-group">
                                <label class="input-group-text" for="cboUnidadEjecutora">Unidad Ejecutora</label>
                            </div>
                            <select class="form-control form-control-sm" id="cboUnidadEjecutora">
                                <option value="Regional Santa Cruz">Regional Santa Cruz</option>
                            </select>
                            <div class="input-group">
                                <label class="input-group-text" for="cboCentro">Centro Medico (Programa)</label>
                            </div>
                            <select class="custom-select" id="cboCentro">
                            </select>
                            <div class="input-group">
                                <label class="input-group-text" for="cboUnidadResponsable">Unidad Responsable</label>
                            </div>
                            <select class="custom-select" id="cboUnidadResponsable">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-nueva-planificacion-titulo1 shadow">
                    <div class="card-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupTotal">Total</span>
                            </div>
                            <input type="text" class="form-control text-left" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                        </div>
                        <div class="form-group mb-0">
                            <button class="btn btn-success btn-sm btn-block" id="btnTerminarSolicitud">Terminar Solicitud Certificacion</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Nuevo_RequerimientoPoa.js"></script>

    <script src="~/js/vistas/ValidarCampo.js"></script>

    <script src="/vendor/jquery-ui/jquery-ui.js"></script>
    <script src="/vendor/jquery-ui/idioma/datepicker-es.js"></script>
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
}

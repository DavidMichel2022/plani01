    <!-- DataTales Example -->
<div class="card-historial-dml shadow mb-4" style="width:82%; height:86%;">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Actividades</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-success" id="btnNuevo"><i class="fas fa-plus-circle"></i> Nueva Actividad</button>
            </div>
        </div>
        <hr />
        <div class="row" style="width:100%; height:92%; overflow-y:scroll">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Codigo</th>
                            <th>Nombre Actividad</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Detalle Actividad</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCodigo">Codigo</label>
                                    <input type="text" class="form-control form-control-sm" id="txtCodigo">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtNombre">Nombre Actividad</label>
                                    <input type="text" class="form-control form-control-sm" id="txtNombre">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="cboEstado">Estado</label>
                                    <select class="form-control form-control-sm" id="cboEstado">
                                        <option value="1">Activo</option>
                                        <option value="0">No Activo</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalDataNuevo" tabindex="-1" aria-hidden="true" role="dialog">
    <main>
        <div class="modal-header">
            <button class="close" type="button" data-dismiss="modalDataNuevo" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>

        <h1>REGISTRO NUEVA ACTIVIDAD</h1>
        <hr />
        <form action="" class="formulario" id="formulario">
            <!-- Grupo: Codigo -->

            <input type="hidden" class="form-control form-control-sm" id="txtId" disabled>
            <div class="formulario__grupo" id="grupo__codigo">
                <label for="codigo" class="formulario__label">Codigo</label>
                <div class="formulario__grupo-input">
                    <input type="text" class="formulario__input" name="codigo" id="codigo" placeholder="Codigo Actividad">
                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="formulario__input-error">El Codigo tiene que ser de 4 a 10 dígitos y solo puede contener numeros, letras, guion y guion bajo.</p>
            </div>

            <!-- Grupo: Nombre -->
            <div class="formulario__grupo" id="grupo__nombre">
                <label for="nombre" class="formulario__label">Nombre Actividad</label>
                <div class="formulario__grupo-input">
                    <input type="text" class="formulario__input" name="nombre" id="nombre" placeholder="Nombre Actividad">
                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="formulario__input-error">El Nombre tiene que ser de 1 a 200 caracteres y puede contener numeros, letras, guion y guion bajo.</p>
            </div>

            <!-- Grupo: Estado -->
            <div class="formulario__grupo" id="grupo__estado">
                <label for="estado" class="formulario__label">Estado Actividad</label>
                <div class="formulario__grupo-input">
                    <select class="form-control form-control-sm" id="cboEstado" name="estado">
                        <option value="1">Activo</option>
                        <option value="0">No Activo</option>
                    </select>
                    <i class="formulario__validacion-estado fas fa-times-circle"></i>
                </div>
                <p class="formulario__input-error">El Estado de la Actividad solo puede ser Activo y No Desactivo.</p>
            </div>

            <div class="formulario__mensaje" id="formulario__mensaje">
                <p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Por favor rellena el formulario correctamente. </p>
            </div>

            <div class="formulario__grupo formulario__grupo-btn-enviar">
                <button type="submit" class="formulario__btn">Enviar</button>
                <p class="formulario__mensaje-exito" id="formulario__mensaje-exito">Formulario enviado exitosamente!</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

@*            <div class="formulario__grupo formulario__grupo-btn-confirmar">

                <button type="submit" class="formulario__btn">Enviar</button>
                <p class="formulario__mensaje-exito" id="formulario__mensaje-exito">Formulario enviado exitosamente!</p>

                <button class="formulario__btn" type="submit" id="btnCancelar" style="margin-left:10px !important;">Cancel</button>
                <button class="formulario__btn" type="submit" id="btnGuardar">Guardar</button>
                <p class="formulario__mensaje-exito" id="formulario__mensaje-exito">Formulario enviado exitosamente!</p>
            </div>
*@        </form>
    </main>
</div>


